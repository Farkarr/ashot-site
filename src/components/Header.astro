---
import { BASE_URL } from "../config/config";
---

<!-- ✅ Este script se ejecuta solo en el cliente -->
<script is:inline>
  function setupMenuToggle() {
    const button = document.getElementById("menu-button");
    const menu = document.getElementById("mobile-menu");

    if (button && menu) {
      // Prevenir múltiples bindings
      button.onclick = () => {
        menu.classList.toggle("hidden");
      };
    }
  }

  // Ejecutar al cargar la página
  document.addEventListener("DOMContentLoaded", setupMenuToggle);

  // Ejecutar cada vez que se navega con Astro SPA
  document.addEventListener("astro:after-swap", setupMenuToggle);
</script>

<header class="bg-white shadow-sm">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    <div class="flex justify-between items-center py-6 md:justify-start md:space-x-10">
      <!-- Logo -->
      <div class="flex justify-start lg:w-0 lg:flex-1">
        <a href={BASE_URL} class="flex items-center text-xl font-bold text-gray-800">
          Eular Group
        </a>
      </div>

      <!-- Botón hamburguesa -->
      <div class="md:hidden">
        <button
          id="menu-button"
          type="button"
          class="inline-flex items-center justify-center p-2 rounded-md text-gray-600 hover:text-yellow-500 hover:bg-gray-100 focus:outline-none"
          aria-label="Abrir menú"
        >
          <svg class="h-6 w-6" fill="none" stroke="currentColor" stroke-width="2" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" d="M4 6h16M4 12h16M4 18h16" />
          </svg>
        </button>
      </div>

      <!-- Navegación desktop -->
      <nav class="hidden md:flex space-x-8 items-center" aria-label="Main Navigation">
        <a href={BASE_URL} class="text-base font-medium text-gray-700 hover:text-yellow-500">Inicio</a>
        <a href={BASE_URL + "/services"} class="text-base font-medium text-gray-700 hover:text-yellow-500">Servicios</a>
        <a href={BASE_URL + "/about"} class="text-base font-medium text-gray-700 hover:text-yellow-500">Sobre nosotros</a>
        <a href={BASE_URL + "/contact"} class="text-base font-medium text-gray-700 hover:text-yellow-500">Contacto</a>
      </nav>
    </div>
  </div>

  <!-- Menú móvil -->
  <div id="mobile-menu" class="md:hidden hidden px-4 pb-6 space-y-2">
    <a href={BASE_URL} class="block text-gray-700 font-medium hover:text-yellow-500">Inicio</a>
    <a href={BASE_URL + "/services"} class="block text-gray-700 font-medium hover:text-yellow-500">Servicios</a>
    <a href={BASE_URL + "/about"} class="block text-gray-700 font-medium hover:text-yellow-500">Sobre nosotros</a>
    <a href={BASE_URL + "/contact"} class="block text-gray-700 font-medium hover:text-yellow-500">Contacto</a>
  </div>
</header>
