---
import Layout from "../layouts/Layout.astro";
import ServiceCard from "../components/ServiceCard.astro";
---
<Layout title="Eular Group">

   <section class="h-[90vh] flex items-center justify-center bg-gray-200">
      <div class="text-center">
        <h1 class="text-4xl font-bold mb-4">Construcción en Pladur y más</h1>
        <p class="text-lg mb-6">Expertos en soluciones integrales para tu es  pacio.</p>
        <a href="/services" class="bg-yellow-500 text-white px-4 py-2 rounded shadow">Ver servicios</a>
      </div>
    </section>
   
    <section class="p-8">
      <h2 class="text-2xl font-semibold mb-4">Nuestros Servicios</h2>
      <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
        <ServiceCard nombre="Pladur" descripcion="Lorem ipsum dolor sit amet." />
        <ServiceCard nombre="Techos" descripcion="Lorem ipsum dolor sit amet." />
        <ServiceCard nombre="Pintura" descripcion="Lorem ipsum dolor sit amet." />
      </div>
    </section>
</Layout>