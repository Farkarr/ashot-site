---
import Layout from "../layouts/Layout.astro";
---
<Layout title="Contacto | Construcción XYZ">
  <section class="p-6 space-y-4">
    <h1 class="text-3xl font-bold">Contáctanos</h1>
    <form class="space-y-4 max-w-xl">
      <input class="w-full p-2 border rounded" type="text" placeholder="Nombre" />
      <input class="w-full p-2 border rounded" type="email" placeholder="Email" />
      <textarea class="w-full p-2 border rounded" placeholder="Mensaje"></textarea>
      <button class="bg-yellow-500 text-white px-4 py-2 rounded">Enviar</button>
    </form>
    <img class="w-full h-80 bg-gray-300" alt="Mapa o zona de cobertura" />
  </section>
</Layout>